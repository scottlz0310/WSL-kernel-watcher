<Window
    x:Class="WSLKernelWatcher.WinUI3.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="WSL Kernel Watcher (WinUI 3)">
    <Grid Padding="16"
          RowDefinitions="Auto,Auto,*,Auto"
          RowSpacing="12">
        <StackPanel Spacing="6">
            <TextBlock Text="WSL Kernel Watcher (WinUI 3 preview)"
                       FontSize="20"
                       FontWeight="SemiBold"/>
            <TextBlock x:Name="StatusText"
                       Text="Waiting for first check..."/>
        </StackPanel>

        <Expander Grid.Row="1"
                  Header="Settings"
                  HorizontalAlignment="Stretch"
                  HorizontalContentAlignment="Stretch">
            <StackPanel Spacing="8" Margin="0,8,0,0">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="Check interval (hours):" VerticalAlignment="Center"/>
                    <NumberBox x:Name="CheckIntervalBox"
                               Minimum="1"
                               Maximum="24"
                               SpinButtonPlacementMode="Inline"
                               Width="120"
                               ValueChanged="OnCheckIntervalChanged"/>
                </StackPanel>
                <TextBlock Text="Changes will take effect after restart"
                           FontSize="12"
                           Foreground="{ThemeResource SystemControlDisabledChromeDisabledLowBrush}"/>
            </StackPanel>
        </Expander>

        <Border Grid.Row="2"
                BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="8">
            <StackPanel>
                <TextBlock Text="Recent activity"
                           FontWeight="SemiBold"
                           Margin="0,0,0,4"/>
                <ListView x:Name="LogList"
                          Height="200"
                          SelectionMode="None">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}"
                                       TextWrapping="Wrap"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    Spacing="8"
                    VerticalAlignment="Center">
            <Button Content="Check now"
                    Click="OnCheckNow"/>
            <Button Content="Open log folder"
                    Click="OnOpenLogFolder"/>
            <Button Content="Minimize to tray"
                    Click="OnExit"/>
        </StackPanel>
    </Grid>
</Window>
